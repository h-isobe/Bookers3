<%= form_tag(search_path, :method => 'get') do %>
    <%= text_field_tag :search %>
    <%= select_tag(:option, options_for_select([["User", "1"],["Book","2"]]))%> 
    <%= select_tag(:choice, options_for_select([["完全一致", "1" ],["前方一致", "2" ],["後方一致", "3" ],["部分一致", "4"]])) %>
    <%= submit_tag '検索' %>
<% end %>


<% if @user_or_book == "1"%>
    <h1>Users search for 'test'</h1>
    <table class="table">
        <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <th>Introduction</th>
            </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= user.introduction %></td>
          </tr>
        <% end %>
        </tbody>
    </table>

<% elsif @user_or_book == "2" %>
    <h1>Books search for 'test'</h1>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 10, 10, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>        
        <% end %>
      </tbody>
    </table>
<% else %>
<% end %>