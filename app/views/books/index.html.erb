
<%= render "users/list", user: @user, book: @book %>

<div class="col-xs-9">

<% if flash[:success] %>
  <p class="success"><%= flash[:success] %></p>
<% end %>

<%= form_tag(search_path, :method => 'get') do %>
    <%= text_field_tag :search %>
    <%= select_tag(:option, options_for_select([["User", "1"],["Book","2"]])) %> 
    <%= select_tag(:choice, options_for_select([["完全一致", "1" ],["前方一致", "2" ],["後方一致", "3" ],["部分一致", "4"]])) %>
    <%= submit_tag '検索' %>
<% end %>

<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
<% @books.each do |book| %>
    <tr>
      <td>
      <%= link_to user_path(book.user.id) do %>
      <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
      <% end %>
      </td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
      <% if book.favorited_by?(current_user) %>
          <td>
            <%= link_to book_favorites_path(book), method: :delete do %>
              <i class="far fa-heart" aria-hidden="true" style="color: red;"></i>
              <%= book.favorites.count %>
            <% end %>
          <td>
      <% else %>
          <td>
            <%= link_to book_favorites_path(book), method: :post do %>
              <i class="fas fa-heart" aria-hidden="true"></i>
              <%= book.favorites.count %>
            <% end %>
          <td>
      <% end %>
      <td>コメント数：<%= book.post_comments.count %></td>
    </tr>
<% end %>
  </tbody>
</table>

  <%= paginate @books %>

</div>
