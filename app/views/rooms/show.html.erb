<% @entries.each do |e| %>
  <h4>name</h4>
  <%= e.user.name %>
  <h4>introduction</h4>
  <%= e.user.introduction %>
<% end %>

<% if @messages.present? %>
  <% @messages.each do |m| %>
    <%= m.content %>
  <% end %>
<% else %>
  <h4>メッセージはありません</h4>
<% end %>

<%= form_for @message do |f| %>

  <%= f.text_field :content %>
  <%= f.hidden_field :room_id, :value => @room.id %>
  <br>
  <%= f.submit "投稿する" %>
<% end %>

  <%= link_to "ユーザー一覧へ", users_path %>