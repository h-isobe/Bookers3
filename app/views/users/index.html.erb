
<%= render "list", user: @user, book: @book %>

<div class="col-xs-9">

<h1>Users</h1>

<% @users.each do |user| %>

  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 10, 10, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
    </tbody>
  </table>

<% end %>

</div>
