
<%= render "list", user: @user, book: @book %>


<div class="col-xs-9">
  <h1>Books</h1>
  


    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opiion</th>
        </tr>
      </thead>
      <tbody>
  <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, :fill, 10, 10, farmat: 'jpeg', fallback: "no_image.jpg" %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
          <td>コメント数：<%= book.post_comments.count %></td>
        </tr>
  <% end %>
      </tbody>
    </table>
</div>
